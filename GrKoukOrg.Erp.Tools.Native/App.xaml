<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:GrKoukOrg.Erp.Tools.Native"
             xmlns:converters="clr-namespace:GrKoukOrg.Erp.Tools.Native.Converters"
             x:Class="GrKoukOrg.Erp.Tools.Native.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary Source="Resources/Styles/AppStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:AutoCompleteSelectionConverter x:Key="AutoCompleteSelectionConverter" />
            <converters:DatePickerDateSelectedValueConverter x:Key="DatePickerDateSelectedValueConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
