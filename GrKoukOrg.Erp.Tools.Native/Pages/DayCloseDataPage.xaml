<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:sf="clr-namespace:Syncfusion.Maui.Toolkit.TextInputLayout;assembly=Syncfusion.Maui.Toolkit"
             xmlns:editors="clr-namespace:Syncfusion.Maui.Toolkit.NumericEntry;assembly=Syncfusion.Maui.Toolkit"
             xmlns:picker="clr-namespace:Syncfusion.Maui.Toolkit.Picker;assembly=Syncfusion.Maui.Toolkit"
             xmlns:pageModels="clr-namespace:GrKoukOrg.Erp.Tools.Native.PageModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:behaviors="clr-namespace:GrKoukOrg.Erp.Tools.Native.Behaviors"
             x:DataType="pageModels:DayCloseDataPageModel"
             x:Name="DayCloseDataContentPage"
             x:Class="GrKoukOrg.Erp.Tools.Native.Pages.DayCloseDataPage">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            BindingContext="{Binding Path=BindingContext, Source={x:Reference DayCloseDataContentPage}
            ,x:DataType=ContentPage}"
            Command="{Binding AppearingCommand}" />

    </ContentPage.Behaviors>
    <ContentPage.Resources>


        <Style TargetType="DatePicker">
            <Setter Property="FontSize" Value="{OnIdiom 16,Desktop=27}" />
            <Setter Property="TextColor"
                    Value="{AppThemeBinding Light={StaticResource DarkOnLightBackground}, Dark={StaticResource LightOnDarkBackground}}" />
        </Style>

        <Style TargetType="editors:SfNumericEntry">
            <Setter Property="TextColor"
                    Value="{AppThemeBinding Light={StaticResource DarkOnLightBackground}, Dark={StaticResource LightOnDarkBackground}}" />
            <Setter Property="ClearButtonColor"
                    Value="{AppThemeBinding Light={StaticResource DarkOnLightBackground}, Dark={StaticResource LightOnDarkBackground}}" />


            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="FontSize" Value="{OnIdiom 16,Desktop=27}" />
        </Style>
        <Style TargetType="Label">
            <Setter Property="HorizontalOptions" Value="Center" />
            <Setter Property="VerticalOptions" Value="Center" />
            <Setter Property="FontSize" Value="{OnIdiom 16,Desktop=27}" />
        </Style>
        <Style TargetType="Entry">
            <Setter Property="TextColor"
                    Value="{AppThemeBinding Light={StaticResource DarkOnLightBackground}, Dark={StaticResource LightOnDarkBackground}}" />
            <Setter Property="BackgroundColor" Value="Transparent" />
            <Setter Property="FontFamily" Value="OpenSansRegular" />
            <Setter Property="FontSize" Value="{OnIdiom 16,Desktop=24}" />
            <Setter Property="PlaceholderColor"
                    Value="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray500}}" />
            <Setter Property="MinimumHeightRequest" Value="44" />
            <Setter Property="MinimumWidthRequest" Value="44" />
            <Setter Property="VisualStateManager.VisualStateGroups">
                <VisualStateGroupList>
                    <VisualStateGroup x:Name="CommonStates">
                        <VisualState x:Name="Normal" />
                        <VisualState x:Name="Disabled">
                            <VisualState.Setters>
                                <Setter Property="TextColor"
                                        Value="{AppThemeBinding Light={StaticResource Gray300}, Dark={StaticResource Gray600}}" />
                            </VisualState.Setters>
                        </VisualState>
                    </VisualStateGroup>
                </VisualStateGroupList>
            </Setter>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout
                Spacing="{StaticResource LayoutSpacing}"
                Padding="{StaticResource LayoutPadding}">

                <Label Text="Ταμείο Ημέρας" Style="{StaticResource Title2}" />
                <picker:SfDatePicker Mode="Dialog"
                                     Format="dd_MM_yyyy"
                                     SelectedDate="{Binding ClosingDate}"
                                     IsOpen="{Binding IsOpen}"
                                     SelectionChangedCommand="{Binding PickerValueChangedCommand}"
                                     AcceptCommand="{Binding  AcceptPickerCommand}"
                                     DeclineCommand="{Binding DeclinePickerCommand}">
                    <picker:PickerHeaderView Height="40" Text="Ημερομηνία Κλεισίματος" />
                    <picker:SfDatePicker.FooterView>
                        <picker:PickerFooterView Height="40" OkButtonText="Save"
                                                 CancelButtonText="Exit" />
                    </picker:SfDatePicker.FooterView>
                </picker:SfDatePicker>
                <VerticalStackLayout
                    Spacing="{StaticResource LayoutSpacing}">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label Grid.Row="0" Grid.Column="0"
                               Text="Ημερομηνία" />
                        <Entry Grid.Row="0" Grid.Column="1"
                               Text="{Binding ClosingDate, StringFormat='{0:dd/MM/yyyy}'}" />
                        <Button Grid.Row="0" Grid.Column="2"
                                Text="..."
                                Command="{Binding ShowPickerCommand}" />
                    </Grid>

                    <HorizontalStackLayout Spacing="{StaticResource LayoutSpacing}">
                        <Label
                            WidthRequest="200"
                            Text="Αριθμός Ζ" />
                        <Entry
                            WidthRequest="200"
                            Text="{Binding ZNumber}">
                            <Entry.Behaviors>
                                <behaviors:PositiveIntegerBehavior />
                            </Entry.Behaviors>
                        </Entry>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="{StaticResource LayoutSpacing}">
                        <Label
                            WidthRequest="200"
                            Text="Μετρητά" />
                        <Entry
                            WidthRequest="200"
                            Text="{Binding TotalCash}">
                            <Entry.Behaviors>
                                <behaviors:CurrencyBehavior />
                            </Entry.Behaviors>

                        </Entry>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="{StaticResource LayoutSpacing}">
                        <Label
                            WidthRequest="200"
                            Text="Κάρτες" />
                        <Entry
                            WidthRequest="200"
                            Text="{Binding TotalCards}">
                            <Entry.Behaviors>
                                <behaviors:CurrencyBehavior />
                            </Entry.Behaviors>

                        </Entry>
                    </HorizontalStackLayout>

                    <HorizontalStackLayout Spacing="{StaticResource LayoutSpacing}">
                        <Label
                            WidthRequest="200"
                            Text="Star" />
                        <Entry
                            WidthRequest="200"
                            Text="{Binding TotalStar}">
                            <Entry.Behaviors>
                                <behaviors:CurrencyBehavior />
                            </Entry.Behaviors>

                        </Entry>
                    </HorizontalStackLayout>

                    <Button
                        HeightRequest="{OnIdiom 44, Desktop=60}"
                        Text="Submit"
                        Command="{Binding SubmitCommand}" />
                </VerticalStackLayout>
            </VerticalStackLayout>


        </ScrollView>
    </ContentPage.Content>
</ContentPage>